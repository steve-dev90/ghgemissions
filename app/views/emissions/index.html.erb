<section class="hero">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h2 class="is-size-4">You emitted <%= @total_emissions %> kilograms of greenhouse gases </h2>
      <h2 class="is-size-4">for the month of <%= Date::MONTHNAMES[Date.parse(Time.new.to_s).prev_month.month] =%> </h2>
      </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-two-thirds has-text-centered">
        <%= line_chart chart_data(@user_emissions, :trading_period, :user_emission, "rgba(220,220,220,0.2)"), user_emissions_options %>
      </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-two-thirds has-text-centered">
        <% background_color = ['red', 'green', 'blue', 'pink', 'purple', 'yellow']%>
        <%= doughnut_chart chart_data(@trader_emissions, :trader, :emissions_factor, background_color), { } %>
      </div>
  </div>
</section>